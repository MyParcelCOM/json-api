{
  "name": "myparcelcom/exceptions",
  "description": "Package for exceptions and exception handling for MyParcel.com projects.",
  "type": "library",
  "homepage": "https://www.myparcel.com",
  "authors": [
    {
      "name": "Sam de Vries",
      "email": "sam@myparcel.com"
    },
    {
      "name": "Shady Khattab",
      "email": "shady@myparcel.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "laravel/framework": "~5.4",
    "intouch/newrelic": "^1.0.3"
  },
  "autoload": {
    "psr-4": {
      "MyParcelCom\\Exceptions\\": "src/Exceptions/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0",
    "mockery/mockery": "0.9.*"
  },
  "autoload-dev": {
    "psr-4": {
      "MyParcelCom\\Exceptions\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "check-style": "vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests",
    "fix-style": "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests"
  }
}
