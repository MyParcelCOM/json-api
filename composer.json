{
  "name": "myparcelcom/transformers",
  "description": "MyParcel.com package for transforming models into jsonapi responses.",
  "homepage": "https://www.myparcel.com",
  "type": "library",
  "authors": [
    {
      "name": "Thomas Eilering",
      "email": "thomas@myparcel.com"
    },
    {
      "name": "Shady Khattab",
      "email": "shady@myparcel.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/MyParcelCOM/common.git"
    }
  ],
  "require": {
    "php": ">=7.1",
    "myparcelcom/common": "^1.1.0",
    "illuminate/support": "~5.0"
  },
  "autoload": {
    "psr-4": {
      "MyParcelCom\\Transformers\\": "src/Transformers/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0",
    "mockery/mockery": "0.9.*"
  },
  "autoload-dev": {
    "psr-4": {
      "MyParcelCom\\Transformers\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "check-style": "vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests",
    "fix-style": "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests"
  }
}
