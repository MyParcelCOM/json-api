{
  "name": "myparcelcom/common",
  "description": "MyParcel.com shared library with common interfaces, traits and utility classes.",
  "homepage": "https://www.myparcel.com",
  "type": "library",
  "require": {
    "guzzlehttp/promises": "^1.0",
    "illuminate/database": "~5.0",
    "illuminate/support": "~5.0",
    "php": ">=7.1",
    "justinrainbow/json-schema": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "MyParcelCom\\Common\\": "src/Common/"
    }
  },
  "require-dev": {
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "MyParcelCom\\Common\\Tests\\": "tests"
    }
  },
  "scripts": {
    "check-style": "vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests",
    "fix-style": "vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --warning-severity=6 src tests"
  }
}
